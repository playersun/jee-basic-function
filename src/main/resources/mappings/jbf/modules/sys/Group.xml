<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.playersun.jbf.modules.sys.dao.GroupDao">
    <sql id="groupColumns">
        a.id as g_id, a.name, a.type,
        a.default_group, a.is_show, 
        a.create_by, a.create_date,
        a.update_by, a.update_date,
        a.remarks, a.deleted
    </sql>
    
    <resultMap id="groupResultMap" type="com.playersun.jbf.modules.sys.entity.Group">
        <id column="g_id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="type" property="type"  typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler" />
        <result column="default_group" property="defaultGroup" jdbcType="BIGINT" />
        <result column="is_show" property="isShow" jdbcType="BIT" />
        
        <result column="create_by" property="createBy" jdbcType="BIGINT" />
        <result column="create_date" property="createDate"
            jdbcType="DATE" />
        <result column="update_by" property="updateBy" jdbcType="BIGINT" />
        <result column="update_date" property="updateDate"
            jdbcType="DATE" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
        <result column="deleted" property="deleted" jdbcType="BIT" />
        
    </resultMap>
    
    <!-- 根据ID查询角色 -->
    <select id="findById" resultMap="groupResultMap">
        SELECT
        <include refid="groupColumns" />
        FROM sys_group a
        WHERE a.id = #{id}
    </select>

    <!-- 查询角色列表 -->
    <select id="findList" resultMap="groupResultMap">
        SELECT
        <include refid="groupColumns" />
        FROM sys_group a
    </select>

    <insert id="insert">
        INSERT INTO sys_group(
            name,
            type,
            default_group,
            is_show,
            create_by,
            create_date,
            update_by,
            update_date,
            remarks,
            deleted
        ) VALUES (
            #{name},
            #{type, javaType=com.playersun.jbf.modules.sys.entity.GroupType, typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler},
            #{defaultGroup},
            #{isShow},
            #{createBy},
            #{createDate},
            #{updateBy},
            #{updateDate},
            #{remarks},
            #{deleted}
        )
    </insert>
</mapper>
