<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.playersun.jbf.modules.sys.dao.ResourceDao">
    <sql id="resourceColumns">
        a.id, a.parent_id, a.parent_ids, a.name,
        a.identification,(select count(1) from sys_resource sub where sub.parent_id = a.id) as has_children,
        a.url, a.icon, a.weight, a.is_show,
        a.create_by, a.create_date,
        a.update_by, a.update_date,
        a.remarks,
        a.deleted
    </sql>
    
    <resultMap id="resourceResultMap" type="com.playersun.jbf.modules.sys.entity.Resource">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="parent_id" property="parentId" jdbcType="BIGINT" />
        <result column="parent_ids" property="parentIds" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="identification" property="identification" jdbcType="VARCHAR" />
        <result column="url" property="url" jdbcType="BIGINT" />
        <result column="icon" property="icon" jdbcType="VARCHAR" />
        <result column="weight" property="weight" jdbcType="INTEGER" />
        <result column="is_show" property="isShow" jdbcType="BIT" />
        <result column="has_children" property="hasChildren" jdbcType="BIT" />
        
        <result column="create_by" property="createBy" jdbcType="BIGINT" />
        <result column="create_date" property="createDate" jdbcType="DATE" />
        <result column="update_by" property="updateBy" jdbcType="BIGINT" />
        <result column="update_date" property="updateDate" jdbcType="DATE" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
        <result column="deleted" property="deleted" jdbcType="BIT" />
    </resultMap>
    
    <!-- 根据ID查询资源 -->
    <select id="findById" resultMap="resourceResultMap">
        SELECT
            <include refid="resourceColumns"/>
        FROM sys_resource a
        WHERE a.id = #{id}
    </select>
    
    <!-- 查询资源列表 -->
    <select id="findList" resultMap="resourceResultMap">
        SELECT
            <include refid="resourceColumns"/>
        FROM sys_resource a WHERE a.deleted = #{deleted} and a.parent_id = #{parentId}
    </select>

    <insert id="insert">
        INSERT INTO sys_resource
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="name != null" >
                name,
            </if>
            <if test="identification != null" >
                identification,
            </if>
            <if test="url != null" >
                url,
            </if>
            <if test="parentId != null" >
                parent_id,
            </if>
            <if test="parentIds != null" >
                parent_ids,
            </if>
            <if test="weight != null" >
                weight,
            </if>
            <if test="isShow != null" >
                is_show,
            </if>
            <if test="createBy != null" >
                create_by,
            </if>
            <if test="createDate != null" >
                create_date,
            </if>
            <if test="updateBy != null" >
                update_by,
            </if>
            <if test="updateDate != null" >
                update_date,
            </if>
            <if test="remarks != null" >
                remarks,
            </if>
            <if test="deleted != null" >
                deleted,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="name != null" >
                #{name},
            </if>
            <if test="identification != null" >
                #{identification},
            </if>
            <if test="url != null" >
                #{url},
            </if>
            <if test="parentId != null" >
                #{parentId},
            </if>
            <if test="parentIds != null" >
                #{parentIds},
            </if>
            <if test="weight != null" >
                #{weight},
            </if>
            <if test="isShow != null" >
                #{isShow},
            </if>
            <if test="createBy != null" >
                #{createBy},
            </if>
            <if test="createDate != null" >
                #{createDate},
            </if>
            <if test="updateBy != null" >
                #{updateBy},
            </if>
            <if test="updateDate != null" >
                #{updateDate},
            </if>
            <if test="remarks != null" >
                #{remarks},
            </if>
            <if test="deleted != null" >
                #{deleted},
            </if>
        </trim>
    </insert>
    
    <update id="update">
        update sys_resource
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="identification != null" >
                identification = #{identification},
            </if>
            <if test="url != null" >
                url = #{url},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="parentIds != null">
                parent_ids = #{parentIds},
            </if>
            <if test="weight != null">
                weight = #{weight},
            </if>
            <if test="isShow != null">
                is_show = #{isShow},
            </if>
            <if test="createBy != null">
                create_by = #{createBy},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            <if test="updateDate != null">
                update_date = #{updateDate},
            </if>
            <if test="remarks != null">
                remarks = #{remarks},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
    
    <sql id="deleteSql">
        update sys_resource set deleted = 1 where deleted = 0 and id = #{id}
    </sql>
    
    <update id="delete">
        <include refid="deleteSql" />
    </update>
    
    <update id="deleteById">
        <include refid="deleteSql" />
    </update>
    
    <update id="deleteBatch" parameterType="java.util.List">
        update sys_resource set deleted = 1 where id in
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
            #{item.id}
        </foreach>
    </update>
    
    <update id="deletaAll">
        update sys_resource set deleted = 1 where 1=1
    </update>

</mapper>