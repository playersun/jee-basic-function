<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.playersun.jbf.modules.sys.dao.RoleDao">
    <sql id="roleColumns">
        a.id as r_id, a.name, a.role, a.description,a.is_show,
        a.create_by, a.create_date,
        a.update_by, a.update_date,
        a.remarks, a.deleted, b.id,
        b.role_id,
        b.resource_id, b.permission_ids,
        b.create_by, b.create_date,
        b.update_by, b.update_date,
        b.remarks, b.deleted
    </sql>

    <resultMap id="roleResultMap" type="com.playersun.jbf.modules.sys.entity.Role">
        <id column="r_id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="role" property="role" jdbcType="VARCHAR" />
        <result column="description" property="description"
            jdbcType="VARCHAR" />
        <result column="is_show" property="isShow" jdbcType="BIT" />

        <result column="create_by" property="createBy" jdbcType="BIGINT" />
        <result column="create_date" property="createDate"
            jdbcType="DATE" />
        <result column="update_by" property="updateBy" jdbcType="BIGINT" />
        <result column="update_date" property="updateDate"
            jdbcType="DATE" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
        <result column="deleted" property="deleted" jdbcType="BIT" />

        <collection property="resourcePermissions"
            resultMap="com.playersun.jbf.modules.sys.dao.RoleResourcePermissionDao.roleResourcePermissionResultMap" />
        <!-- <collection property="resourcePermissions" ofType="com.playersun.jbf.modules.sys.entity.RoleResourcePermission">
            <id column="resource_permissionsid" property="id" jdbcType="BIGINT" />
            <result column="role_id" property="roleId" jdbcType="BIGINT" />
            <result column="resource_id" property="resourceId" jdbcType="BIGINT" />
            <result column="permission_ids" property="permissionIds" jdbcType="VARCHAR" />
        </collection> -->
    </resultMap>

    <!-- 根据ID查询角色 -->
    <select id="findById" resultMap="roleResultMap">
        SELECT
        <include refid="roleColumns" />
        FROM jbf.sys_role a left join sys_role_resource_permission b on
        a.id = b.role_id
        WHERE a.id = #{id}
    </select>

    <!-- 查询角色列表 -->
    <select id="findList" resultMap="roleResultMap">
        SELECT
        <include refid="roleColumns" />
        FROM jbf.sys_role a left join sys_role_resource_permission b on
        a.id = b.role_id 
    </select>
    
    <select id="findShowRoles" resultMap="roleResultMap">
        SELECT 
        <include refid="roleColumns" />
        FROM jbf.sys_role a left join sys_role_resource_permission b on 
        a.id = b.role_id 
        <trim prefix="where" suffixOverrides="and" >
            <![CDATA[is_show = 1 and]]>
            <if test="roleIds != null and roleIds.siez() > 0">
                a.id in 
                <foreach collection="roleIds" item="roleId" 
                    open="(" separator="," close=")">
                    #{roleId}
                </foreach>
            </if>
        </trim>
    </select>
    
    <insert id="insert">
        INSERT INTO sys_role
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="name != null" >
                name,
            </if>
            <if test="role != null" >
                role,
            </if>
            <if test="description != null" >
                description,
            </if>
            <if test="isShow != null" >
                is_show,
            </if>
            <if test="createBy != null" >
                create_by,
            </if>
            <if test="createDate != null" >
                create_date,
            </if>
            <if test="updateBy != null" >
                update_by,
            </if>
            <if test="updateDate != null" >
                update_date,
            </if>
            <if test="remarks != null" >
                remarks,
            </if>
            <if test="deleted != null" >
                deleted,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="name != null" >
                #{name},
            </if>
            <if test="role != null" >
                #{role},
            </if>
            <if test="description != null" >
                #{description},
            </if>
            <if test="isShow != null" >
                #{isShow},
            </if>
            <if test="createBy != null" >
                #{createBy},
            </if>
            <if test="createDate != null" >
                #{createDate},
            </if>
            <if test="updateBy != null" >
                #{updateBy},
            </if>
            <if test="updateDate != null" >
                #{updateDate},
            </if>
            <if test="remarks != null" >
                #{remarks},
            </if>
            <if test="deleted != null" >
                #{deleted},
            </if>
        </trim>
    </insert>
    
    <update id="update">
        update sys_role
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="role != null" >
                role = #{role},
            </if>
            <if test="description != null" >
                description = #{description},
            </if>
            <if test="isShow != null">
                is_show = #{isShow},
            </if>
            <if test="createBy != null">
                create_by = #{createBy},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            <if test="updateDate != null">
                update_date = #{updateDate},
            </if>
            <if test="remarks != null">
                remarks = #{remarks},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
    
    <sql id="deleteSql">
        update sys_role set deleted = 1 where deleted = 0 and id = #{id}
    </sql>
    
    <update id="delete">
        <include refid="deleteSql" />
    </update>
    
    <update id="deleteById">
        <include refid="deleteSql" />
    </update>
    
    <update id="deleteBatch" parameterType="java.util.List">
        update sys_role set deleted = 1 where id in
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
            #{item.id}
        </foreach>
    </update>
    
    <update id="deletaAll">
        update sys_role set deleted = 1 where 1=1
    </update>
    

</mapper>