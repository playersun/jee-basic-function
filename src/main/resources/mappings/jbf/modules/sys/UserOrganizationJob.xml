<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.playersun.jbf.modules.sys.dao.UserOrganizationJobDao">

    <sql id="userOrganizationJobColumns">
        a.id as uoj_id, a.organization_id, a.job_id,
        a.create_by, a.create_date,
        a.update_by, a.update_date,
        a.remarks, a.deleted,
        b.id u_id, b.username, b.password,
        b.salt, b.name,
        b.work_number, b.gender, b.birthday, b.email,
        b.mobile, b.photo,
        b.create_by u_create_by, b.create_date u_create_date, b.update_by u_update_by,
        b.update_date u_update_date,
        b.remarks u_remarks, b.deleted u_deleted,
        b.status
    </sql>

    <resultMap id="userOrganizationJobResultMap"
        type="com.playersun.jbf.modules.sys.entity.UserOrganizationJob">

        <id column="uoj_id" property="id" jdbcType="BIGINT" />
        <result column="organization_id" property="organizationId"
            jdbcType="BIGINT" />
        <result column="job_id" property="jobId" jdbcType="BIGINT" />

        <result column="create_by" property="createBy" jdbcType="BIGINT" />
        <result column="create_date" property="createDate"
            jdbcType="DATE" />
        <result column="update_by" property="updateBy" jdbcType="BIGINT" />
        <result column="update_date" property="updateDate"
            jdbcType="DATE" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
        <result column="deleted" property="deleted" jdbcType="BIT" />
        <!-- <association property="user"
            resultMap="com.playersun.jbf.modules.sys.dao.UserDao.userResultMap" /> -->
        <association property="user" javaType="com.playersun.jbf.modules.sys.entity.User">
            <id column="u_id" property="id" jdbcType="BIGINT" />
            <result column="username" property="username" jdbcType="VARCHAR" />
            <result column="password" property="password" jdbcType="VARCHAR" />
            <result column="salt" property="salt" jdbcType="VARCHAR" />
            <result column="name" property="name" jdbcType="VARCHAR" />
            <result column="work_number" property="workNumber"
                jdbcType="VARCHAR" />
            <result column="gender" property="gender"
                typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler" />
            <result column="birthday" property="birthday" jdbcType="DATE" />
            <result column="email" property="email" jdbcType="VARCHAR" />
            <result column="mobile" property="mobile" jdbcType="VARCHAR" />
            <result column="photo" property="photo" jdbcType="VARCHAR" />
            <result column="status" property="status"
                typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler" />
    
            <result column="u_create_by" property="createBy" jdbcType="BIGINT" />
            <result column="u_create_date" property="createDate"
                jdbcType="DATE" />
            <result column="u_update_by" property="updateBy" jdbcType="BIGINT" />
            <result column="u_update_date" property="updateDate"
                jdbcType="DATE" />
            <result column="u_remarks" property="remarks" jdbcType="VARCHAR" />
            <result column="u_deleted" property="deleted" jdbcType="BIT" />
        </association>
    </resultMap>

    <select id="findList" resultMap="userOrganizationJobResultMap">
        SELECT
        <include refid="userOrganizationJobColumns" />
        from
        sys_user_organization_job a left join sys_user b
        on a.user_id = b.id 
    </select>
</mapper>